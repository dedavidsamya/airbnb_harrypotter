<div class="home-container">
  <div class="container pt-4 d-flex justify-content-center">

      <%= form_tag('/flats', method: :get) do %>

      <div id="index-form-div " class= "p-5" >
        <div class="container">

              <div class="row">
                <div class="col-10">

                  <%=  select_tag 'location_id', options_for_select(@locations.collect{ |u| [u.name, u.id] }.insert(0,"Where in the Wizarding world would you like to go?")), class: "form-control" %>
                </div>

                <div class="col-2">
                  <%= submit_tag 'Apparition!', class: "btn btn-light"%>
                </div>
              </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

